{
  "name": "pantry-tracker",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "start:prod": "NODE_ENV=production electron .",
    "lint": "eslint .",
    "test": "jest",
    "build:prod": "NODE_ENV=production electron-builder",
    "analyze": "webpack-bundle-analyzer stats.json",
    "compress": "node scripts/compress-images.js",
    "optimize": "node scripts/optimize-db.js",
    "docs": "jsdoc -c jsdoc.json",
    "postinstall": "node scripts/check-sqlite.js"
  },
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "electron-devtools-installer": "^3.2.0",
    "dotenv": "^16.4.5",
    "webpack-bundle-analyzer": "^4.10.1",
    "jsdoc": "^4.0.2",
    "compression": "^1.7.4"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "sqlite3": "^5.0.2",
    "better-sqlite3": "^8.0.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "sanitize-html": "^2.12.1",
    "crypto-js": "^4.2.0",
    "node-cache": "^5.1.2",
    "sharp": "^0.32.6",
    "compression": "^1.7.4"
  },
  "build": {
    "appId": "com.pantrytracker.app",
    "productName": "Pantry Tracker",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "*.js",
      "*.html",
      "*.css",
      "assets/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "description": "A secure and efficient pantry inventory management system",
  "keywords": [],
  "author": "Your Name",
  "license": "ISC"
}
